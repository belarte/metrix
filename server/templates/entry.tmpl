{{define "entry"}}
<select id="metric" name="entry-select" hx-get="/entry/select" hx-target="#entry-content">
    <option value="add-entry">Select a metric</option>
    {{range .Metrics}}
    <option value="{{.ID}}" {{if eq .ID $.Selected.ID}}selected{{end}}>{{.Title}}</option>
    {{end}}
</select>

<div id="entry-content">
</div>
{{end}}

{{define "entry-form"}}
<article>
    <form hx-post="/entry/submit" hx-target="#entry-content">
    <input type="hidden" name="metric" value="{{.Selected.ID}}">
    <label for="value">Value in {{.Selected.Unit}}
        <input type="number" step="any" id="value" name="value" required>
    </label>
    <label for="date">Date
      <input type="date" id="date" name="date" required>
    </label>
    <button type="submit">Submit</button>
    </form>
</article>
{{end}}

{{define "entry-created"}}
<article>
Entry submitted successfully!
</article>
{{end}}

{{define "entry-updated"}}
<article>
Entry updated successfully!
</article>
{{end}}
